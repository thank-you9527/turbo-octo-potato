{
  "name": "ukaihost",
  "version": "0.1.0",
  "description": "UkaiHost MVP desktop app",
  "main": "dist/main.js",
  "scripts": {
    "build:ts": "tsc -p tsconfig.json",
    "copy-static": "node scripts/copy-static.js",
    "copy-baseware-root": "node scripts/copy-baseware-root.js",
    "dev": "npm run copy-static && concurrently -k \"tsc -w\" \"wait-on dist/main.js && wait-on dist/renderer/index.html && electron .\"",
    "build": "npm run build:ts && npm run copy-static && electron-builder --win && npm run copy-baseware-root"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "concurrently": "^8.2.2",
    "electron": "^30.0.8",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ukaihost.app",
    "productName": "UkaiHost",
    "artifactName": "UkaiHost.exe",
    "files": [
      "dist/**/*",
      "baseware_root/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "baseware_root",
        "to": "baseware_root"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable"
    }
  }
}
